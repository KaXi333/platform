.signUp-wrapper
    width 100%
    margin 0 auto
    overflow hidden
    background-color #f9f9f9
    .sign-box
      max-width 1140px
      width 94opx
      margin 40px auto 60px
      background-color #fff
      border-radius 4px
      .row
        .left-desc
          padding 110px 60px 90px 90px
          background-position center
          background-size cover
          background-image url("../../common/images/devise-bg.png")
          h4
            margin 0 0 5px 0
            font-size 18px
            font-weight normal
            text-align left
            img
              width 40px
          p
            margin 0 0 50px 50px
            color #9b9b9b
            text-align left
        .sign-input
          padding 40px 60px
          h3
            font-size 24px
            font-weight normal
            text-align left
            margin-bottom 30px
          .input-area
            form
              .form-group
                margin-bottom 15px
                .input-item
                  height 50px
                  padding 6px 12px
                  font-size 14px
                  line-height 1.42857143
                  margin-bottom 30px
                  background-color: #F3F3F3;
                  box-shadow inset 0 1px 3px 0 rgba(178,178,178,0.5)
                  border-radius 4px
                  border none
                .code-box
                  height 50px
                  font-size 14px
                  line-height 1.42857143
                  margin-bottom 30px 
                .phoneCode
                  p
                    height 50px
                    font-size 14px
                    line-height 50px
                    margin-bottom 30px
                    background-color #d33a31 
                    color #fff 
                    border-radius 4px
                .changeBackBtn
                  p
                    background-color #fff 
                    color #1b1b1b
                    border 1px solid #1b1b1b    
              .signBtn
                height 50px
                box-shadow 0 2px 4px 0 rgba(69,146,69,0.5)
                border-radius 4px
                background-color #d33a31
                width 100%
                font-size 16px
                color #fff
                outline none
          .fastLogin
            text-align left
            color #d33a31   
          .links-area
            text-align center
            .help-term-content
              display block
              margin 20px 0 10px 0
              color #808080
              font-size 16px
            .new-registration-link
              color #808080
              font-size 16px
            a
              color #d33a31
              font-size 16px